<script>
    $("td[contenteditable].").keypress(function (evt) {
            var keycode = evt.charCode || evt.keyCode;
            if (keycode == 13) {//Enter key's keycode
                $(this).blur();
                var index = $('.Name').index(this) + 1;
                $('.Name').eq(index).focus();                
                return false;
            }
        });       
</script>

