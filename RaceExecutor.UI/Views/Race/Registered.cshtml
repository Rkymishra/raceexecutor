@model IEnumerable<RaceExecutorModel.Register>

@{
    ViewBag.Title = "Registered";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/datatable.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/datatable.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>
<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Registered Runners</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <a href="#"  class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">
          Registered Runner

        </a>
        <ol class="breadcrumb">
            <li><a href="#">Trail Race</a></li>
            <li class="active">Excel format for Register</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row bg-title white-box">
    @*cc*@

    <table id="example" class="table table-striped table-bordered white-box" style="width:100%">
        <thead>
            <tr>
                <th>
                    BIB-Code
                </th>
                <th>
                    Name
                </th>
                <th>Age</th>
                <th>
                    Gender
                </th>
                <th>
                    DOB
                </th>

                <th>
                    Phone
                </th>
                <th>
                    Email
                </th>
                <th>
                    Distance
                </th>
                <th>
                    StartTime
                </th>
                @*<th>Action</th>*@
                
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td contenteditable="true" id="@item.Id" class="BIBCode">
                        @Html.DisplayFor(modelItem => item.BIBCode)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="Name">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="Age">
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="Gender">
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="DateOfBirth">
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="PhoneNumber">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="Email">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="Distance">
                        @Html.DisplayFor(modelItem => item.Distance)
                    </td>
                    <td contenteditable="true" id="@item.Id" class="StartTime">
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    @*<td>
                        <a href="#">
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>*@
                </tr>
            }
        </tbody>

    </table>
</div>
<script>

    $('table td.Name').on('input', function () {
        var row = $(this).attr('id');
        var Name = $(this).text();      
        $.ajax({
                type: "POST",
                url: '@Url.Action("UpdateRegistered", "Race")',
                data: { UserName: Name, rowId: row },
                dataType: 'html',
                encode: true,
                success: function (data) {
                alert("Success");
