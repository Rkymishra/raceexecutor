@model RaceExecutor.UI.Models.TrailRace
@{
    ViewBag.Title = "OverAll-Ranking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Ranking List</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <a href="#"  class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">
            Ranked List
        </a>
        <ol class="breadcrumb">
            <li><a href="#">Trail Race</a></li>
            <li class="active">Ranking Runners</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row bg-title white-box">    
        <div class="row">
            @*<a href="@Url.Action("Create", "Race")" class="btn btn-primary">*@
                @*<span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp;*@
                @*BIB Entry
            </a>*@
            <a href="@Url.Action("RankCategoryWiseForm", "Race")" class="btn btn-primary ">
                @*<span class="glyphicon glyphicon-circle-arrow-left">
                    </span>&nbsp;*@
                Generate Report
            </a>
        </div>
    <br />
    <hr />
    <br />
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" style="color:white;" id="successMessage">@TempData["Success"]</p>
        }
            <div class="row">

                <table id="example" class="table table-striped table-bordered white-box" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                BIBCode
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                StartTime
                            </th>
                            <th>
                                EndTime
                            </th>

                            <th>
                                Interval
                            </th>
                            <th>
                                Distance
                            </th>
                            <th>
                                Rank
                            </th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.DisplayList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BIBCode)
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.StartTime.Value.ToLongTimeString()
                    </td>
                    <td>
                        @item.EndTime.Value.ToLongTimeString()
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Interval)
                    </td>
                    <td>
                        @item.Distance
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rank)
                    </td>


                </tr>
}
                    </tbody>

                </table>
            </div>
</div>
<link href="~/Content/datatable.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/datatable.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>


<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<script>
    setTimeout(function () {
        $('#successMessage').fadeOut('fast');
    }, 1000); // <-- time in milliseconds
</script>