@model RaceExecutor.UI.Models.TrailRace
@{
    ViewBag.Title = "MissedRunnerCheckSel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Missed List</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <a href="#" class="btn btn-danger pull-right m-l-20 hidden-xs hidden-sm waves-effect waves-light">
            Missed List
        </a>
        <ol class="breadcrumb">
            <li><a href="#">Trail Race</a></li>
            <li class="active">Missing Runners</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row bg-title white-box">
    <div class="row">

        <table id="example" class="table table-striped table-bordered white-box" style="width:100%">
            <thead>
                <tr>
                    <th>
                        BIBCode
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Age-Category
                    </th>
                    <th>
                        StartTime
                    </th>
                    <th>
                        RaceId
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.DisplayList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BIBCode)
                        </td>
                        <td>
                            @item.Name <strong>(@item.PhoneNumber)</strong>
                        </td>
                        <td>
                            @item.Age
                        </td>
                        <td>
                            @*@item.StartTime.Value.ToLongTimeString()*@
                            @*@item.Interval*@
                        </td>
                        <td>
                            @item.Distance
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<link href="~/Content/datatable.bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/datatable.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
